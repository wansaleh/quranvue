source :rubygems

# sinatra & plugins
gem 'sinatra',           :require => 'sinatra/base'
gem 'sinatra-contrib',   :require => ['sinatra/reloader', 'sinatra/content_for']
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'
gem 'sinatra-backbone',  :require => 'sinatra/backbone'

# backend
gem 'mysql2'
gem 'sequel'
gem 'json'

# assets
gem 'sass'
gem 'compass'
gem 'haml'
gem 'coffee-script'
gem 'yui-compressor'
gem 'ceaser-easing'

# webservers
gem 'foreman'
gem 'unicorn'
gem 'thin'
gem 'puma'

# guard
gem 'guard'
gem 'guard-livereload'
gem 'rack-livereload'
gem 'rb-fsevent'
gem 'growl_notify'
